<Page x:Class="WpfApplication1.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApplication1"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="500"
       Focusable="True"
      
      Title="GamePage" KeyDown="Page_KeyDown" >

    <Canvas Name="gameCanvas" Margin="0,30,0,0">
        <Image Name ="personnage" Source="Img/oeil.jpg" Width="30" Height="30" Margin="0,0,0,0"/>
        <Label x:Name="playerNameLabel" Content="Player : " Height="25" Canvas.Top="-29" Width="171" Canvas.Left="171"/>
        <Label x:Name="nbMoveLabel" Content="Nb moves : " Height="25" Canvas.Left="347" Canvas.Top="-29" Width="71"/>
        <Label x:Name="nbMoveValue" Content="" Height="25" Canvas.Left="423" Canvas.Top="-29" Width="75"/>
        <Label x:Name="difficultyLabel" Content="Difficulty : " Height="25" Canvas.Top="-29" Width="171"/>
        <Canvas.Background>
            <ImageBrush ImageSource="Img/background.jpg"/>
        </Canvas.Background>
    </Canvas>

</Page>
