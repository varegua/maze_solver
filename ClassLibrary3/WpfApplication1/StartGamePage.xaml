<Page x:Class="MazeSolver.Client.Wpf.StartGamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MazeSolver.Client.Wpf"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="500"
      Title="StartGamePage">

    <Grid>
        <TextBox x:Name="tBPseudo" HorizontalAlignment="Left" Height="24" Margin="180,94,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="153"/>
        <Label x:Name="lblName" Content="Pseudo" HorizontalAlignment="Left" Margin="191,68,0,0" VerticalAlignment="Top" Width="50"/>
        <Label x:Name="lblTitle" Content="Maze Solver" HorizontalAlignment="Left" Margin="180,10,0,0" VerticalAlignment="Top" FontSize="25" FontWeight="Bold"/>
        <Label x:Name="lblDifficulty" Content="Difficulty" HorizontalAlignment="Left" Margin="180,134,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnPlay" Content="Play" HorizontalAlignment="Left" Margin="180,219,0,0" VerticalAlignment="Top" Width="153" Height="42" Click="btnPlay_Click"/>
        <ComboBox x:Name="cBDifficulty" HorizontalAlignment="Left" Margin="180,160,0,0" VerticalAlignment="Top" Width="153" Height="27" > </ComboBox>
    </Grid>
</Page>
